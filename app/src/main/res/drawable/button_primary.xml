<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape>
            <gradient
                android:angle="135"
                android:startColor="@color/primary_dark"
                android:endColor="@color/primary_variant"
                android:type="linear" />
            <corners android:radius="16dp" />
        </shape>
    </item>
    <item>
        <shape>
            <gradient
                android:angle="135"
                android:startColor="@color/primary"
                android:centerColor="@color/primary_variant"
                android:endColor="@color/accent_cyan"
                android:type="linear" />
            <corners android:radius="16dp" />
        </shape>
    </item>
</selector>
