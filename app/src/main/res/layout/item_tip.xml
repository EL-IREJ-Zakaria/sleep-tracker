<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardBackgroundColor="@color/night_blue"
    app:cardCornerRadius="16dp"
    app:cardElevation="4dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp"
        android:gravity="center_vertical">

        <!-- IcÃ´ne du conseil -->
        <TextView
            android:id="@+id/tv_tip_icon"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:text="ðŸ’¡"
            android:textSize="24sp"
            android:gravity="center"
            android:background="@drawable/circle_progress"
            android:backgroundTint="@color/lavender"
            android:layout_marginEnd="16dp"/>

        <!-- Contenu du conseil -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_tip_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Titre du conseil"
                android:textColor="@color/lavender"
                android:textSize="16sp"
                android:fontFamily="sans-serif-medium"
                android:layout_marginBottom="4dp"/>

            <TextView
                android:id="@+id/tv_tip_description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Description du conseil"
                android:textColor="@color/pale_purple"
                android:textSize="14sp"
                android:lineSpacingExtra="2dp"/>

        </LinearLayout>

        <!-- Checkbox pour marquer comme fait -->
        <com.google.android.material.checkbox.MaterialCheckBox
            android:id="@+id/cb_tip_done"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:buttonTint="@color/lavender"
            app:useMaterialThemeColors="false"/>

    </LinearLayout>

</androidx.cardview.widget.CardView>