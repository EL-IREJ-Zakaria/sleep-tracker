<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/soft_eggplant"
    android:padding="24dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!-- En-tête Titre -->
        <TextView
            android:id="@+id/title_dashboard"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tableau de bord"
            android:textColor="@color/lavender"
            android:textSize="32sp"
            android:fontFamily="sans-serif-medium"
            android:letterSpacing="0.02"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="20dp"/>

        <!-- Résumé Quotidien -->
        <androidx.cardview.widget.CardView
            android:id="@+id/daily_summary_card"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            app:cardBackgroundColor="@color/night_blue"
            app:cardCornerRadius="16dp"
            app:cardElevation="4dp"
            app:layout_constraintTop_toBottomOf="@id/title_dashboard">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Résumé de la nuit dernière"
                    android:textColor="@color/lavender"
                    android:textSize="18sp"
                    android:fontFamily="sans-serif-medium"
                    android:layout_marginBottom="16dp"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="2">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Durée"
                            android:textColor="@color/pale_purple"
                            android:textSize="14sp"
                            android:layout_marginBottom="4dp"/>

                        <TextView
                            android:id="@+id/tv_sleep_duration"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="7h 15m"
                            android:textColor="@color/pale_purple"
                            android:textSize="20sp"
                            android:fontFamily="sans-serif-medium"/>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Qualité"
                            android:textColor="@color/pale_purple"
                            android:textSize="14sp"
                            android:layout_marginBottom="4dp"/>

                        <TextView
                            android:id="@+id/tv_sleep_quality"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Bonne"
                            android:textColor="@color/pale_purple"
                            android:textSize="20sp"
                            android:fontFamily="sans-serif-medium"/>

                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <!-- Graphique Hebdomadaire -->
        <androidx.cardview.widget.CardView
            android:id="@+id/chart_card"
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:layout_marginTop="24dp"
            app:cardBackgroundColor="@color/night_blue"
            app:cardCornerRadius="16dp"
            app:cardElevation="4dp"
            app:layout_constraintTop_toBottomOf="@id/daily_summary_card"/>


        <!-- Bouton Flottant -->
        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/fab_add_sleep"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="24dp"
            android:src="@drawable/ic_add"
            android:contentDescription="Ajouter une session de sommeil"
            app:backgroundTint="@color/lavender"
            app:tint="@color/soft_eggplant"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.core.widget.NestedScrollView>